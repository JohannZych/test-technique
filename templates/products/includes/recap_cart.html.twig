<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Produit</th>
            <th scope="col">SKU</th>
            <th scope="col">Quantité</th>
            <th scope="col">Prix Unitaire HT</th>
            <th scope="col">TVA</th>
            <th scope="col">Prix Unitaire TTC</th>
            <th scope="col">Prix Total TTC</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody>
    {% for product in cart.products %}
        <tr>
            <td>{{ product.product.id }}</td>
            <td>{{ product.product.title[:30] ~ '...' }}</td>
            <td>{{ product.product.sku }}</td>
            <td>
                <button class="quantity">
                    <i class="fa-solid fa-minus"></i>
                </button>
                <label>
                    <input type="text" value="{{ product.quantity }}" />
                </label>
                <button class="quantity">
                    <i class="fa-solid fa-plus"></i>
                </button>
            </td>
            <td>{{ product.product.priceHT }} €</td>
            <td>{{ product.product.vat.amount }} %</td>
            <td> --,-- €</td>
            <td> --,-- €</td>
            <td><a href="#"><i class="fa-regular fa-trash-can"></i></a></td>
        </tr>
    {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td colspan="8" class="text-end fw-bold mr-5">TOTAL :</td>
            <td>--,-- €</td>
        </tr>
    </tfoot>
</table>